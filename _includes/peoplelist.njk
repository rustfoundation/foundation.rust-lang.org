<ul class="peoplelist">
{% for person in peoplelist  %}
  <li {% if person.data.headshot %}style="background-image: url('/img/headshot/{{ person.data.headshot }}'" {% endif %}>
    <div {% if person.data.ferris %}style="background-image: url('/img/ferris/{{ person.data.ferris }}'" {% endif %} alt="a drawing of ferris" class="ferris"></div>
    <div class="person">
    	<h2>{{ person.data.name }}</h2>
    	<h3>{{ person.data.title }}</h3>
    </div>
  </li>
{% endfor %}
</ul>
